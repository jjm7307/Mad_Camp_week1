<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/backcolor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#0e0f0a"
        tools:context=".MainActivity">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            app:tabPaddingTop="50dp"
            app:tabPaddingBottom="5dp"
            android:paddingBottom="0dp"
            android:background="@drawable/radius_set"
            app:tabTextColor="@color/white">

        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.viewpager.widget.ViewPager>

    </LinearLayout>

    <ImageView
        android:id="@+id/snowvillage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:layout_gravity="bottom"
        android:visibility="invisible"
        android:src="@drawable/snowvillage" />

    <com.jetradarmobile.snowfall.SnowfallView
        android:id="@+id/snoweffect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:snowflakesFadingEnabled="false"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="16dp"
        android:elevation="6dp"
        android:clickable="true"
        android:src="@drawable/icon_fab_music"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="270dp"
        android:layout_marginRight="16dp"
        android:elevation="6dp"
        android:clickable="true"
        android:src="@drawable/icon_fab_village"
        android:visibility="invisible"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="210dp"
        android:layout_marginRight="16dp"
        android:elevation="6dp"
        android:clickable="true"
        android:src="@drawable/icon_fab_night"
        android:visibility="invisible"
        app:fabSize="normal"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:elevation="6dp"
        android:src="@drawable/icon_fab_snow"
        android:visibility="invisible"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:clickable="true"
        app:fabSize="normal"
        android:src="@drawable/icon_fab_setting"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal"
        android:weightSum="3">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="2dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/icon_contact" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_photo" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="38dp"
                android:scaleType="fitCenter"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/icon_gift" />
        </FrameLayout>
    </LinearLayout>




</FrameLayout>