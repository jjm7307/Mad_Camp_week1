<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card:cardBackgroundColor="#59af73"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="3dp"
        card:cardCornerRadius="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="8dp"
                    android:layout_height="8dp"/>

                <androidx.cardview.widget.CardView
                    android:paddingLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    card:cardBackgroundColor="@color/white"
                    card:cardCornerRadius="27dp"
                    card:cardUseCompatPadding="false"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/icon_profile_red" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/contact_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="name"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="number"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    card:cardBackgroundColor="#F8D85A"
                    card:cardCornerRadius="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/calling"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_call_two" />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>
            </LinearLayout>

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>