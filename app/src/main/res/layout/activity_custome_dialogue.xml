<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginHorizontal="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/grid_item_radius"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    android:id="@+id/layout_root">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/image_fortune"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_fortune_cookies2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_fortune"
        android:breakStrategy="balanced"
        android:text="행복은 가까이 있다"
        android:textSize="20dp"
        android:lineSpacingExtra="4dp"
        android:layout_margin="10dp"
        android:id="@+id/text_fortune"
        android:textStyle="bold"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_fortune"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:background="@drawable/icon_save_tab3"
            android:layout_marginHorizontal="8dp"
            android:id="@+id/button_screen_shot"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:background="@drawable/icon_share_tab3"
            android:id="@+id/button_share"
            />
    </LinearLayout>



</RelativeLayout>